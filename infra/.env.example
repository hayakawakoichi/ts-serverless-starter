# AWS Configuration
AWS_REGION=ap-northeast-1
AWS_PROFILE=default

# Secrets Manager secret names
DB_SECRET_NAME=ts-serverless-starter/database-url
AUTH_SECRET_NAME=ts-serverless-starter/auth-secret

# Site URL (set after first deployment, then redeploy)
# Get this from the CloudFront domain output after first deploy
SITE_URL=https://your-cloudfront-domain.cloudfront.net

# Docs access (comma-separated emails, optional)
DOCS_ALLOWED_EMAILS=

# Note: Create secrets in AWS Secrets Manager before deployment:
#   aws secretsmanager create-secret --name ts-serverless-starter/database-url --secret-string "postgresql://..."
#   aws secretsmanager create-secret --name ts-serverless-starter/auth-secret --secret-string "your-secret"
