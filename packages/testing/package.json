{
    "name": "@repo/testing",
    "version": "0.0.1",
    "private": true,
    "type": "module",
    "exports": {
        ".": {
            "types": "./src/index.ts",
            "default": "./src/index.ts"
        },
        "./hono": {
            "types": "./src/hono.ts",
            "default": "./src/hono.ts"
        },
        "./react": {
            "types": "./src/react.tsx",
            "default": "./src/react.tsx"
        }
    },
    "scripts": {
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@testing-library/dom": "^10.4.0",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "hono": "^4.6.14"
    },
    "devDependencies": {
        "@repo/tsconfig": "workspace:*",
        "@types/node": "^22.10.2",
        "@types/react": "^19.0.2",
        "@types/react-dom": "^19.0.2",
        "@vitest/coverage-v8": "^4.0.16",
        "jsdom": "^26.1.0",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "typescript": "^5.7.2",
        "vitest": "^4.0.16"
    },
    "peerDependencies": {
        "react": ">=18.0.0",
        "react-dom": ">=18.0.0",
        "vitest": ">=2.0.0"
    },
    "peerDependenciesMeta": {
        "react": {
            "optional": true
        },
        "react-dom": {
            "optional": true
        }
    }
}
