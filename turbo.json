{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".next/**", "!.next/cache/**", "cdk.out/**"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": ["^build"]
        },
        "typecheck": {
            "dependsOn": ["^build"]
        },
        "test": {
            "dependsOn": ["^build"]
        },
        "clean": {
            "cache": false
        },
        "db:generate": {
            "cache": false,
            "passThroughEnv": ["DATABASE_URL"]
        },
        "db:migrate": {
            "cache": false,
            "passThroughEnv": ["DATABASE_URL"]
        },
        "db:push": {
            "cache": false,
            "passThroughEnv": ["DATABASE_URL"]
        },
        "db:studio": {
            "cache": false,
            "persistent": true
        }
    }
}
